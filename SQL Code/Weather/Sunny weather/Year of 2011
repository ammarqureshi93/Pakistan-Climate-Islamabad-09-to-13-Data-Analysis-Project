/*Showing all sunny weather in January of 2011*/
SELECT weather, daymonth, year FROM PakistanClimate
WHERE weather = 'Sunny' AND daymonth LIKE '%Jan%' AND year = '2011';

/*Showing all sunny weather in Febuary of 2011*/
SELECT weather, daymonth, year FROM PakistanClimate
WHERE weather = 'Sunny' AND daymonth LIKE '%Feb%' AND year = '2011';

