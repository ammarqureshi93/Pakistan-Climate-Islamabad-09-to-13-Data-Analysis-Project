/*Shows  minimum temperature in January 2011*/
SELECT min_temp_Celsius, daymonth, year FROM PakistanClimate
WHERE year = '2011' and daymonth LIKE '%Jan%' ORDER BY min_temp_Celsius;

/*Shows  minimum temperature in Feburary 2011*/
SELECT min_temp_Celsius, daymonth, year FROM PakistanClimate
WHERE year = '2011' and daymonth LIKE '%Feb%' ORDER BY min_temp_Celsius;

