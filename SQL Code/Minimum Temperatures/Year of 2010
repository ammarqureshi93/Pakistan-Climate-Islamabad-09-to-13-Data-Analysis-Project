/*Shows  minimum temperature in January 2010*/
SELECT min_temp_Celsius, daymonth, year FROM PakistanClimate
WHERE year = '2010' and daymonth LIKE '%Jan%' ORDER BY min_temp_Celsius;

/*Shows  minimum temperature in Feburary 2010*/
SELECT min_temp_Celsius, daymonth, year FROM PakistanClimate
WHERE year = '2010' and daymonth LIKE '%Feb%' ORDER BY min_temp_Celsius;

