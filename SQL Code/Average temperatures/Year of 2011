/*Shows maximum average temperature in January 2011*/
SELECT avg_temp_Celsius, daymonth, year FROM PakistanClimate
WHERE year = '2011' and daymonth LIKE '%Jan%' ORDER BY avg_temp_Celsius;

/*Shows maximum average temperature in Febuary 2011*/
SELECT avg_temp_Celsius, daymonth, year FROM PakistanClimate
WHERE year = '2011' and daymonth LIKE '%Feb%' ORDER BY avg_temp_Celsius;

